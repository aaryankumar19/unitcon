{
    "manifest_version": 3,
    "name": "Unit-Converter",
    "version": "1.0",
    
    "permissions": [
      "sidePanel"
    ],
    "background": {
        "service_worker": "service-worker.js"
      },
    "side_panel": {
        "default_path": "index.html"
    },
    "action": {
        "default_title": "Click to open panel",
        "default_icon": "logo.png"
    }
}